<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal" >
   
    <TextView 
        android:id="@+id/feedback_top_type_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textSize="13sp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/feedbackRecord_type"
        android:textColor="@color/feedback_text_color3"
        />
    <TextView 
        android:id="@+id/feedback_top_type_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textSize="13sp"
        android:text="@string/feedback_cloud_service"
        android:textColor="@color/feedback_text_color2"
        />

</LinearLayout>