<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <include
        android:id="@+id/feedback_loading"
        layout="@layout/feedback_loading_progressbar" />
   <!--  <TextView
        android:id="@+id/popup_menu_anchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" /> -->

    <!-- Modified by l00138406 2014-01-03 修改问题单DTS2014010207321 -->
    <ListView
        android:id="@+id/feedback_list"
        style="@style/feedback_ListViewStyle"
        android:scrollbars="none"
		android:divider="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout 
        android:id="@+id/feedback_No_result_prompt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:contentDescription="@string/feedbackNoRecord"
        android:focusable="true" 
        android:visibility="gone">
        <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.3" />
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.7"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
        <ImageView 
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/feedback_f_icon_bill"/>
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/feedbackNoRecord"
        	android:textSize="13sp"
        	android:textColor="@color/feedback_text_color2"
        	android:layout_marginTop="1dp"
        	android:paddingStart="24dp"
        	android:paddingEnd="24dp"
        	android:paddingLeft="24dp"
        	android:paddingRight="24dp"
        	android:gravity="center"
        	android:focusable="false" />
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/feedback_No_result_prompt_land"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:contentDescription="@string/feedbackNoRecord"
        android:focusable="true" 
        android:visibility="gone">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >
        <ImageView 
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/feedback_f_icon_bill"/>
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/feedbackNoRecord"
        	android:textSize="13sp"
        	android:textColor="@color/feedback_text_color2"
        	android:layout_marginTop="1dp"
        	android:paddingStart="24dp"
        	android:paddingEnd="24dp"
        	android:paddingLeft="24dp"
        	android:paddingRight="24dp"
        	android:gravity="center"
        	android:focusable="false" />
        </LinearLayout>
    </LinearLayout>
    
</RelativeLayout>