<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="136dp"
    android:gravity="center_vertical"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/feedback_layout_start_end_padding"
    android:layout_marginLeft="@dimen/feedback_layout_start_end_padding"
    android:layout_marginEnd="@dimen/feedback_layout_start_end_padding"
    android:layout_marginRight="@dimen/feedback_layout_start_end_padding"
    android:layout_marginTop="14dp"
    android:layout_marginBottom="14dp"
    android:textSize="15sp"
    />

</LinearLayout>
