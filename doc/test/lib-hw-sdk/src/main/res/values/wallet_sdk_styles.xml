<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HwPay.Theme.Holo.Light" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@color/wallet_sdk_hwpay_bg_color</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="HwPay.Theme.Translucent.NoTitleBar" parent="@style/HwPay.Theme.Holo.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>