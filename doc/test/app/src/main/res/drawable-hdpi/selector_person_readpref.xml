<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/reading_preference_close" android:state_enabled="true" android:state_pressed="true" android:state_window_focused="false" /> <!-- pressed,enable等多个属性 -->
    <item android:drawable="@drawable/reading_preference_open" android:state_focused="true" /> <!-- focused -->
    <item android:drawable="@drawable/reading_preference_open" android:state_selected="true" />
    <item android:drawable="@drawable/reading_preference_close" android:state_hovered="true" /> <!-- hovered -->
