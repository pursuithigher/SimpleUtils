<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_layout_root"
    android:layout_width="@dimen/hw_dp_88"
    android:layout_height="@dimen/hw_dp_65">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_view_bg"
            android:layout_width="@dimen/hw_dp_40"
            android:layout_height="@dimen/hw_dp_40"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_view_icon"
                android:layout_width="@dimen/hw_dp_25"
                android:layout_height="@dimen/hw_dp_25"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hw_dp_9"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/color_100_000000"
            android:textSize="@dimen/hw_dp_12"
            tools:text="@string/str_person_common_sign_in" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_angle_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_angle_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/color_868686"
            android:textSize="@dimen/hw_dp_12"
            tools:text="@string/str_send_coupons" />
    </LinearLayout>
</RelativeLayout>