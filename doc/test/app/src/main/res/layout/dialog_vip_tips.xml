<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dz_radius"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vip_dialog_tips"
            android:textColor="@color/color_100_1A1A1A"
            android:textSize="@dimen/hw_text_18" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:text="@string/vip_dialog_tips1"
            android:textColor="@color/color_100_1A1A1A"
            android:textSize="@dimen/hw_text_15" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vip_dialog_tips2"
            android:textColor="@color/color_100_1A1A1A"
            android:textSize="@dimen/hw_text_15" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vip_dialog_tips3"
            android:textColor="@color/color_100_1A1A1A"
            android:textSize="@dimen/hw_text_15" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vip_dialog_tips4"
            android:textColor="@color/color_100_1A1A1A"
            android:textSize="@dimen/hw_text_15" />


        <TextView
            android:id="@+id/tv_vip_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:gravity="right"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="4dp"
            android:text="@string/cancel"
            android:textColor="#D0021B"
            android:textSize="@dimen/hw_text_13" />
    </LinearLayout>

</RelativeLayout>