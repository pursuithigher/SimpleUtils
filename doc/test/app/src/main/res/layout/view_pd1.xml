<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_channel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_100_f2f2f2">
        <huawei.widget.HwSubTabWidget
            android:id="@+id/tablayout_pd1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hwSubTabItemTextColor="@color/hw_sub_tab"
            app:hwSubTabIndicatorColor="@color/color_100_CD2325"
            />

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="@dimen/hw_dp_36"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_hw_store_channelbk_gray"
            android:visibility="gone" />

    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_pd1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</merge>