<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/hw_dp_16"
    android:layout_marginRight="@dimen/hw_dp_16"
    android:paddingTop="@dimen/hw_dp_9"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_titleName"
            android:layout_width="@dimen/hw_dp_72"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/color_100_1A1A1A"
            android:text="@string/my_comment_score"
            android:textSize="@dimen/hw_dp_15" />

        <com.dzbook.view.comment.CommentRatingBarView
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/hw_dp_9"
            android:layout_toRightOf="@+id/tv_titleName"
            android:gravity="center_vertical"
            app:clickable="false"
            app:halfstart="true"
            app:starCount="5"
            app:starEmpty="@drawable/hw_star_empty"
            app:starFill="@drawable/hw_star_full"
            app:starHalf="@drawable/hw_star_half"
            app:starImageHeight="@dimen/hw_dp_12"
            app:starImagePaddingBottom="@dimen/hw_dp_1"
            app:starImagePaddingLeft="@dimen/hw_dp_1"
            app:starImagePaddingRight="@dimen/hw_dp_1"
            app:starImagePaddingTop="@dimen/hw_dp_1"
            app:starImageWidth="@dimen/hw_dp_12" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hw_dp_9"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="3"
        android:text=""
        android:textColor="@color/color_50_000000"
        android:textSize="@dimen/hw_dp_13" />

    <RelativeLayout
        android:id="@+id/re_book"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hw_dp_60"
        android:layout_marginTop="@dimen/hw_dp_17"
        android:background="@drawable/hw_shape_frame">

        <com.dzbook.view.common.BookImageView
            android:id="@+id/iv_cover"
            android:layout_width="@dimen/hw_dp_33"
            android:layout_height="@dimen/hw_dp_47"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/hw_dp_8"
            app:book_radius_size="@dimen/hw_dp_1" />

        <TextView
            android:id="@+id/tv_bookName"
            android:layout_width="@dimen/hw_dp_186"
            android:layout_height="@dimen/hw_dp_17"
            android:layout_marginLeft="@dimen/hw_dp_8"
            android:layout_marginTop="@dimen/hw_dp_15"
            android:layout_toRightOf="@+id/iv_cover"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/color_100_1A1A1A"
            android:textSize="@dimen/hw_dp_13" />

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="@dimen/hw_dp_186"
            android:layout_height="@dimen/hw_dp_13"
            android:layout_below="@+id/tv_bookName"
            android:layout_marginLeft="@dimen/hw_dp_8"
            android:layout_marginTop="@dimen/hw_dp_3"
            android:layout_toRightOf="@+id/iv_cover"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/color_50_000000"
            android:textSize="@dimen/hw_dp_10" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/hw_dp_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="@dimen/hw_dp_154"
            android:layout_height="@dimen/hw_dp_13"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/color_30_1A1A1A"
            android:textSize="@dimen/hw_dp_10" />
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:id="@+id/tv_status_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:text="审核未通过"
            android:textColor="@color/color_ff6666"
            android:textSize="@dimen/hw_dp_10"
            android:visibility="gone"/>
    </LinearLayout>
    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hw_line"
        android:layout_marginTop="@dimen/hw_dp_9"
        android:background="@drawable/hwdivider_horizontal_gray_emui"/>

</LinearLayout>