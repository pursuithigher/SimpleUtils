<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_100_ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_mark"
            android:layout_width="220dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/hw_no_network" />

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="我的帐号"
            android:textColor="@color/color_ffb9b9e5"
            android:textSize="@dimen/hw_text_14" />

        <TextView
            android:id="@+id/textview_oper"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="43dp"
            android:background="@drawable/selector_btn_new_small"
            android:gravity="center"
            android:text="@string/refresh"
            android:textColor="@color/color_706ec5"
            android:textSize="@dimen/hw_text_16"
            android:visibility="visible" />

    </LinearLayout>

</RelativeLayout>