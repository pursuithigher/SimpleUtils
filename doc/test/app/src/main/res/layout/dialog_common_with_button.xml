<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_margin="8dp"
    android:background="@drawable/dialog_common_bg"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_24"
    android:paddingRight="@dimen/dp_24"
    android:paddingTop="@dimen/dp_24">

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:orientation="vertical">-->


        <TextView
            android:id="@+id/textview_show_center_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/dialog_cloud_shelf_need_login"
            android:textColor="#ff1a1a1a"
            android:textSize="@dimen/hw_dp_15" />

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="2px"-->
        <!--android:background="@drawable/common_laylist_line" />-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_com_common_item_selector2"
                android:gravity="center_vertical"
                android:text="@string/dialog_need_login_ok"
                android:textColor="#D0021B"
                android:textSize="@dimen/hw_text_14"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="80dp"
                android:layout_marginRight="80dp"
                android:background="@drawable/bg_com_common_item_selector"
                android:gravity="center_vertical"
                android:text="@string/dialog_need_login_cancel"
                android:textColor="#D0021B"
                android:textSize="@dimen/hw_text_14"
                android:textStyle="bold" />


        </RelativeLayout>

    <!--</LinearLayout>-->

</LinearLayout>