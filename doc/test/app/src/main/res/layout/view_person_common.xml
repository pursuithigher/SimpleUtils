<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hw_dp_48"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView_icon"
        android:layout_width="@dimen/hw_dp_20"
        android:layout_height="@dimen/hw_dp_20"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/hw_dp_18"
        android:scaleType="centerInside"
        android:src="@drawable/ic_person_myaccount" />
    <RelativeLayout
        android:layout_toRightOf="@id/imageView_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageview_jiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/hw_dp_18"
            android:scaleType="centerInside"
            android:src="@drawable/ic_person_right" />
        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@id/imageview_jiantou">
            <TextView
                android:id="@+id/textview_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/textview_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="@dimen/hw_dp_0"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="left"
                android:textColor="@color/color_100_1A1A1A"
                android:textSize="@dimen/hw_text_15"
                tools:text="@string/str_my_account" />
            <TextView
                android:id="@+id/textview_content"
                app:layout_constraintLeft_toRightOf="@id/textview_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="@dimen/hw_dp_0"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/hw_dp_4"
                android:singleLine="false"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="right"
                android:text="2018-2-13到期"
                android:textColor="@color/color_50_1A1A1A"
                android:textSize="@dimen/hw_text_13"
                android:visibility="gone" />

        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/imageview_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hw_line"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/hwdivider_horizontal_gray_emui" />
    </RelativeLayout>


</RelativeLayout>