<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/hw_dp_16"
    android:paddingRight="@dimen/hw_dp_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hw_dp_40"
        android:layout_marginTop="@dimen/hw_dp_16"
        android:orientation="horizontal">

        <com.dzbook.view.CircleImageView
            android:id="@+id/circle_photo"
            android:layout_width="@dimen/hw_dp_40"
            android:layout_height="@dimen/hw_dp_40"
            android:src="@drawable/hw_avatar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/hw_dp_16"
            android:layout_marginTop="@dimen/hw_dp_1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hw_dp_20"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_userName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:maxEms="11"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/color_ff000000"
                    android:textSize="@dimen/hw_dp_15" />

                <TextView
                    android:id="@+id/tvVip"
                    android:layout_width="@dimen/hw_dp_24"
                    android:layout_height="@dimen/hw_dp_12"
                    android:layout_marginLeft="@dimen/hw_dp_5"
                    android:background="@drawable/hw_shape_vip"
                    android:gravity="center"
                    android:text="VIP"
                    android:textColor="@color/color_FFFAFAFA"
                    android:textSize="@dimen/hw_dp_9"
                    android:visibility="gone" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hw_dp_13"
                android:layout_marginTop="@dimen/hw_dp_1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/str_score"
                    android:textColor="@color/color_50_000000"
                    android:textSize="@dimen/hw_dp_10" />

                <com.dzbook.view.comment.CommentRatingBarView
                    android:id="@+id/ratingbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/hw_dp_3"
                    android:layout_toRightOf="@+id/tvScore"
                    app:clickable="false"
                    app:halfstart="true"
                    app:starCount="5"
                    app:starEmpty="@drawable/hw_star_empty"
                    app:starFill="@drawable/hw_star_full"
                    app:starHalf="@drawable/hw_star_half"
                    app:starImageHeight="@dimen/hw_dp_12"
                    app:starImagePaddingBottom="@dimen/hw_dp_1"
                    app:starImagePaddingLeft="@dimen/hw_dp_1"
                    app:starImagePaddingRight="@dimen/hw_dp_1"
                    app:starImagePaddingTop="@dimen/hw_dp_1"
                    app:starImageWidth="@dimen/hw_dp_12" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hw_dp_12"
        android:lineSpacingMultiplier="1.2"
        android:text=""
        android:textColor="@color/color_100_000000"
        android:textSize="@dimen/hw_dp_13" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/hw_dp_24"
        android:layout_marginTop="@dimen/hw_dp_8">


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/hw_dp_13"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/color_30_000000"
            android:textSize="@dimen/hw_dp_10" />

        <LinearLayout
            android:id="@+id/ll_like"
            android:layout_width="@dimen/hw_dp_48"
            android:layout_height="@dimen/hw_dp_24"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/hw_shape_frame"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView_like"
                    android:layout_width="@dimen/hw_dp_16"
                    android:layout_height="@dimen/hw_dp_16"
                    android:layout_centerVertical="true"
                    android:background="@drawable/hw_ic_comment_praise_cancel" />

                <TextView
                    android:id="@+id/textView_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/hw_dp_5"
                    android:layout_toRightOf="@+id/imageView_like"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="111"
                    android:textColor="@color/color_50_000000"
                    android:textSize="@dimen/hw_dp_10" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
