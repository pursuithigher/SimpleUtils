<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_100_FFFFFF"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <com.dzbook.view.DianZhongCommonTitle
        android:id="@+id/commontitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:common_title="@string/str_recharge"
        app:showright="0" />

    <com.dzbook.view.ElasticScrollView
        android:id="@+id/scrollview_recharge_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/commontitle"
        android:layout_marginBottom="70dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.dzbook.view.order.OrderTitle
                android:id="@+id/pack_order_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />
            <com.dzbook.view.order.CommonOrdersView
                android:id="@+id/order_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <View
                android:id="@+id/view_order_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hw_dp_8"
                android:visibility="gone"
                android:background="@color/color_05_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_marginTop="18dp"
                android:text="@string/str_convert_information"
                android:textColor="@color/color_50_000000"
                android:textSize="@dimen/hw_text_13" />

            <com.dzbook.view.CustomerGridView
                android:id="@+id/grid_recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_marginTop="13dp"
                android:cacheColorHint="#00000000"
                android:gravity="center"
                android:horizontalSpacing="8dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="2"
                android:scrollbars="none"
                android:scrollingCache="false"
                android:stretchMode="columnWidth"
                android:verticalSpacing="8dip" />

            <com.dzbook.view.order.RechargeBottomTipsView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right" />

        </LinearLayout>

    </com.dzbook.view.ElasticScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/button_recharge"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/dz_recharge_go_recharge_selector"
            android:gravity="center"
            android:text="@string/str_now_recharge"
            android:textColor="@color/color_100_FFFFFF"
            android:textSize="@dimen/hw_text_15" />

    </RelativeLayout>

    <com.dzbook.view.common.StatusView
        android:id="@+id/defaultview_nonet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/commontitle"
        android:visibility="gone"
        app:status_view_drawable="@drawable/hw_no_network"
        app:status_view_hint="@string/hw_show_no_net_public"
        app:status_view_set="@string/string_reference" />

</RelativeLayout>