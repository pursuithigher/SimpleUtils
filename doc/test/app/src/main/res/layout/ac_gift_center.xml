<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/day_main_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.dzbook.view.DianZhongCommonTitle
        android:id="@+id/commontitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_95_f2f2f2"
        app:common_title="@string/string_gift_center"
        app:hasBack="true"
        app:showright="0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_95_f2f2f2">

        <huawei.widget.HwSubTabWidget
            android:id="@+id/viewpagertab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hwSubTabItemTextColor="@color/hw_sub_tab"
            app:hwSubTabIndicatorColor="@color/color_100_CD2325"
            />
    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
