<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- <android.support.constraint.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content">-->

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.31" />

    <com.dzbook.view.common.BookImageView
        android:id="@+id/imageview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:book_havclick="false"
        app:layout_constraintDimensionRatio="h,104:139"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/guideline" />


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingLeft="@dimen/hw_dp_16"
        android:paddingTop="@dimen/hw_dp_9"
        app:layout_constraintBottom_toBottomOf="@id/imageview"
        app:layout_constraintLeft_toRightOf="@id/imageview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageview">

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:textColor="@color/color_100_1A1A1A"
            android:textSize="@dimen/hw_dp_15"
            tools:text="第一拽妃第一拽妃" />

        <TextView
            android:id="@+id/textview_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_title"
            android:layout_marginTop="@dimen/hw_dp_13"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="3"
            android:textColor="@color/color_50_000000"
            android:textSize="@dimen/hw_dp_13"
            tools:text="讲述一个不依附于男人、有经济实力按自己意愿去尽享爱情之美的现代女性修子的故事。" />

        <TextView
            android:id="@+id/textview_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/hw_dp_10"
            android:ellipsize="end"
            android:gravity="left|bottom"
            android:singleLine="true"
            android:textColor="@color/color_50_000000"
            android:textSize="@dimen/hw_dp_13"
            tools:text="渡边淳一" />

    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="0dp"
        android:layout_height="@dimen/hw_line"
        android:layout_marginLeft="@dimen/hw_dp_16"
        android:layout_marginTop="@dimen/hw_dp_5"
        android:background="@drawable/hwdivider_horizontal_gray_emui"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imageview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageview" />

    <!--</android.support.constraint.ConstraintLayout>-->
</merge>