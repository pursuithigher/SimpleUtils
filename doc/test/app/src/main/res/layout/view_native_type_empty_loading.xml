<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/main_color_bg"
    android:layout_height="260dp">

    <com.dzbook.view.common.StatusView
        android:id="@+id/defaultview_recharge_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        app:status_view_drawable="@drawable/hw_empty_default"
        app:status_view_no_loading="false"
        app:status_view_hint="@string/string_empty_type"/>

    <LinearLayout
        android:id="@+id/linearlayout_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible">

        <huawei.widget.HwProgressBar
            style="@style/Widget.Emui.ProgressBar.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>