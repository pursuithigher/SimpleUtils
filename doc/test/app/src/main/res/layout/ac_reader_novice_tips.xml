<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/color_66000000"
            android:layout_weight="1" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_99000000" />

        <View
            android:layout_width="0dp"
            android:background="@color/color_66000000"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_touch_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/hw_dp_50"
        android:src="@drawable/tips_touch" />

    <TextView
        android:id="@+id/tv_touch_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/iv_touch_tips"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/hw_dp_11"
        android:gravity="center_horizontal"
        android:text="@string/str_page_2"
        android:textColor="@color/white"
        android:textSize="@dimen/hw_text_15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_touch_word"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="@string/str_page_1"
        android:textColor="@color/white"
        android:textSize="@dimen/hw_text_15" />

    <ImageView
        android:id="@+id/iv_tips_up"
        android:layout_width="56dp"
        android:layout_height="29dp"
        android:layout_alignTop="@id/iv_touch_tips"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="@dimen/hw_dp_11"
        android:src="@drawable/tips_left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_tips_up"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="@dimen/hw_dp_17"
        android:includeFontPadding="false"
        android:text="@string/str_click_up"
        android:textColor="@color/white"
        android:textSize="@dimen/hw_text_15" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="29dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/iv_touch_tips"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="@dimen/hw_dp_11"
        android:src="@drawable/tips_right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iv_tips_up"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="@dimen/hw_dp_17"
        android:includeFontPadding="false"
        android:text="@string/str_click_down"
        android:textColor="@color/white"
        android:textSize="@dimen/hw_text_15" />

</RelativeLayout>