<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/hw_dp_8"
        android:background="@color/color_5_0c000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hw_dp_48"
        android:layout_marginLeft="@dimen/hw_dp_16"
        android:layout_marginRight="@dimen/hw_dp_16"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/hw_dp_8">

        <TextView
            android:id="@+id/tv_vip_privilege"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="@string/hw_vip_privilege"
            android:textColor="@color/color_100_1A1A1A"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/ll_vip_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|right"
            android:text="@string/hw_vip_privilege_detail"
            android:textColor="#FB6522"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/hw_dp_8"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle_vip_bg"
                android:padding="@dimen/hw_dp_8"
                android:src="@drawable/vip_free" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_4"
                android:text="@string/hw_vip_free" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle_vip_bg"
                android:padding="@dimen/hw_dp_8"
                android:src="@drawable/vip_discount" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_4"
                android:text="@string/hw_vip_discount" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle_vip_bg"
                android:padding="@dimen/hw_dp_8"
                android:src="@drawable/vip_mark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_4"
                android:text="@string/hw_vip_mark" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle_vip_bg"
                android:padding="@dimen/hw_dp_8"
                android:src="@drawable/vip_voucher" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_4"
                android:text="@string/hw_vip_voucher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle_vip_bg"
                android:padding="@dimen/hw_dp_8"
                android:src="@drawable/vip_retroactive" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_4"
                android:text="@string/hw_vip_retroactive" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle_vip_bg"
                android:padding="@dimen/hw_dp_8"
                android:src="@drawable/vip_activity" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_4"
                android:text="@string/hw_vip_activity" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/hw_dp_8"
        android:background="@color/color_5_0c000000" />

</merge>