<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dz_radius"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">

        <TextView
            android:id="@+id/tv_select_chapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/chapter_selected"
            android:textColor="@color/black_full"
            android:textSize="@dimen/hw_text_18" />

        <com.dzbook.view.ListViewMaxHeight
            android:id="@+id/catalog_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:divider="#33182233"
            android:dividerHeight="0px"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none"
            app:maxHeight="192dp" />

        <TextView
            android:id="@+id/tv_select_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:paddingRight="4dp"
            android:paddingLeft="@dimen/dp_10"
            android:layout_marginTop="32dp"
            android:text="@string/cancel"
            android:textColor="#D0021B"
            android:textSize="@dimen/hw_text_13" />
    </LinearLayout>

</RelativeLayout>