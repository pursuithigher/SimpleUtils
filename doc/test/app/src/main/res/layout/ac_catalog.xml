<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_100_FFFFFF"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <com.dzbook.view.DianZhongCommonTitle
        android:id="@+id/commontitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:common_title="@string/reader_catalog"
        app:showright="0" />

    <LinearLayout
        android:id="@+id/layout_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/commontitle"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/color_100_f2f2f2"
            android:clickable="true"
            android:orientation="vertical">

            <huawei.widget.HwSubTabWidget
                android:id="@+id/layout_tab_catalog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hwSubTabItemTextColor="@color/hw_sub_tab"
                app:hwSubTabIndicatorColor="@color/color_100_CD2325"
                />

        </LinearLayout>


        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" />

        <ProgressBar
            android:id="@+id/progressbar_scan_catalog"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="5dip"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/ab_main_progressbar_drawable"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>