<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">


    <com.dzbook.view.DianZhongCommonTitle
        android:id="@+id/commontitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:showleft="true"
        app:showright="0" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_chase_recommed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/commontitle"
        android:clipToPadding="false"
        android:paddingBottom="60dp" />

    <include
        layout="@layout/relative_progressbar_match_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/commontitle" />

    <com.dzbook.view.common.StatusView
        android:id="@+id/statusView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:status_view_drawable="@drawable/hw_empty_default"
        app:status_view_no_loading="false"
        android:layout_below="@id/commontitle"/>

</RelativeLayout>