<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 头部 -->
        <LinearLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/orders_head_layout"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <com.dzbook.view.common.BookImageView
                    android:id="@+id/order_book_image_view"
                    android:layout_width="56dp"
                    android:layout_height="75dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/order_book_image_view"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/order_book_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:textColor="#1a1a1a"
                        android:textSize="15dp"
                        android:text="书名" />

                    <TextView
                        android:id="@+id/order_book_chapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:includeFontPadding="false"
                        android:visibility="gone"
                        android:textColor="@color/color_50_000000"
                        android:textSize="13dp"
                        android:text="单章购买章节" />


                    <TextView
                        android:id="@+id/order_book_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:includeFontPadding="false"
                        android:textColor="@color/color_50_000000"
                        android:textSize="13dp"
                        android:text="作者" />

                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/orders_head_line"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#0d000000" />

            <RelativeLayout
                android:id="@+id/relative_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_single_order_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:maxWidth="251dp"
                    android:singleLine="true"
                    android:textColor="@color/color_100_000000"
                    android:textSize="@dimen/hw_dp_18"
                    android:visibility="gone"
                    tools:text="从你的全世界路过" />

                <TextView
                    android:id="@+id/tv_single_order_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_single_order_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/color_50_000000"
                    android:textSize="@dimen/hw_dp_12"
                    android:visibility="gone"
                    tools:text="时尚芭莎" />

                <TextView
                    android:id="@+id/tv_serial_order_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/color_50_000000"
                    android:textSize="@dimen/hw_dp_13"
                    android:visibility="gone"
                    tools:text="@string/recharge_to_purchase" />

                <TextView
                    android:id="@+id/tv_serial_order_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_serial_order_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:visibility="gone"
                    android:textColor="@color/color_100_000000"
                    android:textSize="@dimen/hw_dp_18"
                    tools:text="第二十章 山路相逢" />

            </RelativeLayout>

        </LinearLayout>

        <!-- 价格 -->
        <RelativeLayout
            android:id="@+id/rl_price"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/head"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/str_order_price"
                android:textColor="@color/color_50_000000"
                android:textSize="@dimen/hw_dp_13" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/color_50_000000"
                android:textSize="@dimen/hw_dp_13"
                tools:text="200 看点" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/hw_line"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="9dp"
                android:background="@drawable/hwdivider_horizontal_gray_emui" />
        </RelativeLayout>

        <!-- 代金券 -->
        <RelativeLayout
            android:id="@+id/rl_voucher"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/rl_price"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_vouchers_deduction_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="@string/str_order_vouchers"
                android:textColor="@color/color_50_000000"
                android:textSize="@dimen/hw_dp_13" />

            <TextView
                android:id="@+id/tv_vouchers_deduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_50_000000"
                android:textSize="@dimen/hw_dp_13"
                tools:text="-10 看点" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/hw_line"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="9dp"
                android:background="@drawable/hwdivider_horizontal_gray_emui" />
        </RelativeLayout>

        <!-- 开通vip -->
        <RelativeLayout
            android:id="@+id/rl_open_vip"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_below="@id/rl_voucher">

            <ImageView
                android:id="@+id/iv_member"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_hw_public_member" />

            <TextView
                android:id="@+id/tv_open_vip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="11dp"
                android:layout_toRightOf="@id/iv_member"
                android:gravity="center_vertical"
                android:textColor="@color/color_100_000000"
                android:textSize="@dimen/hw_dp_13"
                tools:text="@string/recharge_open_vip_free" />

            <ImageView
                android:layout_width="5dp"
                android:layout_height="9dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_hw_arrow_right_grey" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/hw_line"
                android:layout_alignParentBottom="true"
                android:background="@drawable/hwdivider_horizontal_gray_emui" />

        </RelativeLayout>

        <!-- 需要支付看点 -->
        <RelativeLayout
            android:id="@+id/rl_need_pay"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/rl_open_vip"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_need_pay_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/str_order_need_pay"
                android:textColor="@color/color_100_FB6522"
                android:textSize="@dimen/hw_dp_15" />

            <TextView
                android:id="@+id/tv_need_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/color_100_FB6522"
                android:textSize="@dimen/hw_dp_15"
                tools:text="39 看点" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/hw_line"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="9dp"
                android:background="@drawable/hwdivider_horizontal_gray_emui" />
        </RelativeLayout>

        <!-- 余额 -->
        <RelativeLayout
            android:id="@+id/relative_account_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginBottom="9dp"
            android:layout_below="@id/rl_need_pay">

            <TextView
                android:id="@+id/tv_remian_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="9dp"
                android:text="@string/str_order_current_account_remain"
                android:textColor="@color/color_50_000000"
                android:textSize="@dimen/hw_dp_12" />

            <TextView
                android:id="@+id/tv_remain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@id/tv_remian_title"
                android:textColor="@color/color_50_000000"
                android:textSize="@dimen/hw_dp_12"
                tools:text="0看点" />

            <TextView
                android:id="@+id/tv_voucher_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv_remain"
                android:layout_marginTop="9dp"
                android:text="@string/str_order_current_account_voucher"
                android:textColor="@color/color_50_000000"
                android:textSize="@dimen/hw_dp_12" />

            <TextView
                android:id="@+id/tv_voucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_remain"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@id/tv_voucher_title"
                android:textColor="@color/color_50_000000"
                android:textSize="@dimen/hw_dp_12"
                tools:text="0 代金券" />

        </RelativeLayout>

        <!-- 自动购买 -->
        <LinearLayout
            android:id="@+id/linear_auto_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_account_info"
            android:layout_marginTop="25dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="left">

            <CheckBox
                android:id="@+id/cb_auto_order_sw"
                style="@style/dz_charge_auto_order_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:checked="true" />

            <TextView
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:lineSpacingMultiplier="1.1"
                android:paddingLeft="8dp"
                android:text="@string/str_order_auto_purchase_next_chapter"
                android:textColor="@color/color_100_000000"
                android:textSize="@dimen/hw_dp_13" />

        </LinearLayout>

    </RelativeLayout>

</merge>