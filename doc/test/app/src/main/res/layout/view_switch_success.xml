<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_marginBottom="@dimen/hw_dp_25"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/circle_photo"
            android:layout_width="@dimen/hw_dp_60"
            android:layout_height="@dimen/hw_dp_60"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/hw_success_tips" />

        <TextView
            android:id="@+id/tvTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/hw_dp_9"
            android:text="@string/real_name_pre_success"
            android:textColor="@color/color_ff000000"
            android:textSize="@dimen/hw_dp_18" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/hw_dp_48"/>

    </LinearLayout>


        <TextView
            android:id="@+id/tvSubmit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/hw_dp_32"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/selector_hw_gray_common1"
            android:text="@string/real_name_switch_success"
            android:textColor="@color/color_100_1A1A1A"
            android:textSize="@dimen/hw_dp_15"
            android:gravity="center"
            android:maxLines="1"
            android:minWidth="@dimen/hw_dp_193"
            android:paddingLeft="@dimen/hw_dp_8"
            android:paddingRight="@dimen/hw_dp_8"/>


</RelativeLayout>