<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.dzbook.view.DianZhongCommonTitle
        android:id="@+id/include_top_title_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:common_title="@string/str_activity_continuous_monthly_status_list"
        app:showright="0" />

    <LinearLayout
        android:id="@+id/net_error_layout_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/include_top_title_item"
        android:orientation="vertical">

        <com.dzbook.view.PullLoadMoreRecycleLayout
            android:id="@+id/pullLoadMoreRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <com.dzbook.view.common.StatusView
        android:id="@+id/defaultview_recharge_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/include_top_title_item"
        android:visibility="gone"
        app:status_view_drawable="@drawable/hw_empty_default"
        app:status_view_hint="@string/hua_wei_no_monthly_vip"/>

</RelativeLayout>
