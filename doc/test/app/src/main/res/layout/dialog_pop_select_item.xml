<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/hw_dp_48">

    <TextView
        android:id="@+id/tv_chapter_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hw_dp_48"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:minWidth="@dimen/hw_dp_104"
        android:paddingLeft="@dimen/hw_dp_16"
        android:paddingRight="@dimen/hw_dp_16"
        android:textColor="@color/black_full"
        android:textSize="@dimen/hw_text_15" />

    <TextView
        android:id="@+id/tv_chapter_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hw_line"
        android:layout_marginLeft="@dimen/hw_dp_16"
        android:layout_marginRight="@dimen/hw_dp_16"
        android:layout_alignParentBottom="true"
        android:background="#33182233"
        android:minWidth="@dimen/hw_dp_104" />

</RelativeLayout>