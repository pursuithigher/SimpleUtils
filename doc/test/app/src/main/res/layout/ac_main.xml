<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <android.support.v4.app.DzFragmentTabHost
        android:id="@+id/fragmentTabHost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/hw_dp_48">

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0" />

    </android.support.v4.app.DzFragmentTabHost>

    <com.dzbook.view.navigation.BottomBarLayout
        android:id="@+id/bottomBarLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hw_dp_48"
        android:layout_gravity="bottom"
        android:background="@color/color_100_f2f2f2"
        app:tab_containerId="@+id/layout_navigationContainer">

        <com.dzbook.view.NavigationLinearLayout
            android:id="@id/layout_navigationContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <com.dzbook.view.shelf.ShelfManagerBottomView
            android:id="@+id/shelfmanagerbottomview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:visibility="gone" />

    </com.dzbook.view.navigation.BottomBarLayout>

</FrameLayout>
