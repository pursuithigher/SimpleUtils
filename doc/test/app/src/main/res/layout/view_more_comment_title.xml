<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/re_book"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hw_dp_88"
        android:layout_marginBottom="@dimen/hw_dp_7"
        android:layout_marginTop="@dimen/hw_dp_8"
        android:paddingLeft="@dimen/hw_dp_16"
        android:paddingRight="@dimen/hw_dp_16">

        <com.dzbook.view.common.BookImageView
            android:id="@+id/iv_cover"
            android:layout_width="@dimen/hw_dp_56"
            android:layout_height="@dimen/hw_dp_75"
            android:layout_centerVertical="true"
            app:book_radius_size="@dimen/hw_dp_5" />

        <TextView
            android:id="@+id/tv_bookName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/hw_dp_16"
            android:layout_marginTop="@dimen/hw_dp_24"
            android:layout_toRightOf="@+id/iv_cover"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/color_100_1A1A1A"
            android:textSize="@dimen/hw_text_15" />

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_bookName"
            android:layout_marginLeft="@dimen/hw_dp_16"
            android:layout_marginTop="@dimen/hw_dp_5"
            android:layout_toRightOf="@+id/iv_cover"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/color_50_000000"
            android:textSize="@dimen/hw_text_13" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/hw_dp_8"
        android:background="@color/color_05_black" />

    <RelativeLayout
        android:layout_marginBottom="@dimen/hw_dp_7"
        android:id="@+id/rl_comment_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hw_dp_40"
        android:paddingLeft="@dimen/hw_dp_16"
        android:paddingRight="@dimen/hw_dp_16">

        <TextView
            android:id="@+id/tv_book_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/hw_dp_7"
            android:text="@string/book_comment"
            android:textColor="@color/color_ff000000"
            android:textSize="@dimen/hw_text_15" />

        <TextView
            android:id="@+id/tv_sendComment"
            android:layout_width="@dimen/hw_dp_173"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/hw_dp_7"
            android:layout_marginLeft="@dimen/hw_dp_5"
            android:gravity="bottom|right"
            android:text="@string/comment_send_comment"
            android:textColor="@color/color_100_CD2325"
            android:textSize="@dimen/hw_text_13" />

    </RelativeLayout>
</LinearLayout>