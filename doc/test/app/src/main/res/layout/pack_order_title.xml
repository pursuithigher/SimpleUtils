<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        style="@style/paddingOrderStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/hw_dp_8"
        android:layout_marginTop="@dimen/hw_dp_16"
        android:gravity="center"
        android:minHeight="@dimen/hw_dp_24"
        android:textSize="@dimen/hw_text_18" />

    <RelativeLayout
        style="@style/paddingOrderStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hw_dp_60">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/str_order_price"
            android:textColor="@color/color_50_000000"
            android:textSize="@dimen/hw_text_13" />

        <TextView
            android:id="@+id/tv_cost_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color_100_000000"
            android:textSize="@dimen/hw_text_13" />
    </RelativeLayout>

    <View
        android:layout_marginLeft="@dimen/hw_dp_48"
        android:layout_marginRight="@dimen/hw_dp_48"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hw_line"
        android:background="@drawable/hwdivider_horizontal_gray_emui" />

    <RelativeLayout
        style="@style/paddingOrderStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hw_dp_60">

        <TextView
            android:id="@+id/tv_tv_pay_price_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/str_order_need_pay"
            android:textColor="@color/color_100_FB6522"
            android:textSize="@dimen/hw_text_15" />

        <TextView
            android:id="@+id/tv_pay_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color_100_FB6522"
            android:textSize="@dimen/hw_text_15" />
    </RelativeLayout>

    <View
        android:layout_marginLeft="@dimen/hw_dp_48"
        android:layout_marginRight="@dimen/hw_dp_48"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hw_line"
        android:background="@drawable/hwdivider_horizontal_gray_emui" />

    <LinearLayout
        style="@style/paddingOrderStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/hw_dp_21"
        android:layout_marginTop="@dimen/hw_dp_9"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/str_order_current_account_remain"
            android:textColor="@color/color_50_000000"
            android:textSize="@dimen/hw_text_13" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_50_000000"
            android:textSize="@dimen/hw_text_13" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/hw_dp_8"
        android:background="@color/color_05_black" />
</merge>