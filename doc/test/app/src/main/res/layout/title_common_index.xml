<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_item_height"
    >

    <ImageView
        android:background="@drawable/selector_hw_list_item_04_cornor"
        android:id="@+id/imageviewopr1"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/common_item_height"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        tools:src="@drawable/ic_hw_menu" />

    <LinearLayout
        android:id="@+id/linearlayout_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hw_dp_32"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/imageviewopr1"
        android:background="@drawable/shape_hw_titleindex_searchbk"
        android:gravity="left|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/hw_dp_15"
            android:layout_height="@dimen/hw_dp_15"
            android:layout_marginLeft="@dimen/hw_dp_7"
            android:scaleType="centerInside"
            android:src="@drawable/ic_hw_search" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/hw_dp_7"
            android:gravity="left|center_vertical"
            android:text="@string/str_search_hint"
            android:textColor="@color/color_4c000000"
            android:textSize="@dimen/hw_text_13" />
    </LinearLayout>


</RelativeLayout>