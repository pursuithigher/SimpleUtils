<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/re_main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hw_dp_32"
    android:background="@color/color_100_FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_mark"
            android:layout_width="@dimen/hw_dp_16"
            android:layout_height="@dimen/hw_dp_16"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/hw_text_10" />

        <TextView
            android:id="@+id/textview_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/hw_dp_8"
            android:paddingRight="@dimen/hw_dp_8"
            android:singleLine="true"
            android:textColor="@color/color_100_000000"
            android:textSize="@dimen/hw_text_13" />

    </LinearLayout>


</RelativeLayout>