<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_backgroud_day_color"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical">

    <!--<include
        android:id="@+id/include_top_title_item"
        layout="@layout/layout_common_top_title" />-->

    <com.dzbook.view.DianZhongCommonTitle
        android:id="@+id/commontitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:common_title="@string/look_book_comment"
        app:showright="0" />

    <huawei.widget.HwProgressBar
        android:layout_centerInParent="true"
        android:id="@+id/load_more_pb"
        style="@style/Widget.Emui.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical" />

    <LinearLayout
        android:id="@+id/net_error_layout_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/commontitle">
        <com.dzbook.view.PullLoadMoreRecycleLayout
            android:id="@+id/pullLoadMoreRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/common_backgroud_day_color"
            android:visibility="gone" />
    </LinearLayout>

    <com.dzbook.view.common.StatusView
        android:id="@+id/statusView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_below="@id/commontitle"
        app:status_view_set="@string/string_reference"
        app:status_view_drawable="@drawable/hw_no_network"
        app:status_view_no_loading="false"
        app:status_view_hint="@string/hw_show_no_net_public" />

    <com.dzbook.view.bookdetail.CommentEmpty
        android:id="@+id/rl_comment_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/commontitle"
        android:visibility="gone" />

</RelativeLayout>